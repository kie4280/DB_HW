<div class="tab-pane container-fluid fade" id="shop">
  <div class="row">
    <div class="col-sm-5">
      <div class="row">
        <div class="col-sm-12">
          <h4>My Shop</h4>
        </div>
      </div>

      <form action="" method="POST" id="mys">
        <div class="form-group row">
          <div class="info-title col-sm-4 col-lg-2">
            <p>Shop</p>
          </div>
          <div class="info-data col-sm-8 col-lg-10">
            <p>
              <span><%= shop.shop_name %></span>
            </p>
          </div>
          <div class="w-100"></div>
          <div class="info-title col-sm-4 col-lg-2">
            <p>City</p>
          </div>
          <div class="info-data col-sm-8 col-lg-10">
            <p>
              <span><%= shop.shop_city %></span>
            </p>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-4 col-lg-2">
            <label for="mys1">Price</label>
          </div>
          <div class="col-sm-8 col-lg-7">
            <div class="input-group">
              <input
                type="number"
                class="form-control"
                value="<%= shop.mask_price %>"
                id="mys1"
                disabled
              />
              <div class="input-group-append">
                <button type="button" class="btn btn-primary" id="mys2">
                  <span class="spinner-border spinner-border-sm"></span>
                  Edit
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-4 col-lg-2">
            <label for="mys3">Amount</label>
          </div>
          <div class="col-sm-8 col-lg-7">
            <div class="input-group">
              <input
                type="number"
                class="form-control"
                value="<%= shop.mask_amount %>"
                id="mys3"
                disabled
              />
              <div class="input-group-append">
                <button type="button" class="btn btn-primary" id="mys4">
                  <span class="spinner-border spinner-border-sm"></span>
                  Edit
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-4 col-lg-2">
            <label for="mys5">Employee</label>
          </div>
          <div class="col-sm-8 col-lg-7">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                placeholder="Type Account"
                id="mys5"
              />
              <div class="input-group-append">
                <button type="button" class="btn btn-primary" id="mys6">
                  <span class="spinner-border spinner-border-sm"></span>
                  Add
                </button>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <label for="mys5"
              ><span class="text-danger" id="mys-err5"></span
            ></label>
          </div>
        </div>
      </form>
    </div>

    <div class="col-sm-7">
      <table class="table table-striped" id="table2">
        <thead class="thead-dark">
          <tr>
            <th>Account</th>
            <th>Phone</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% clerks.forEach(function (c) { %>
          <tr>
            <td><%= c.account %></td>
            <td><%= c.phone %></td>
            <td></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="tab-pane container-fluid fade" id="shop-order">
  <div class="row">
    <div class="col-sm-12">
      <h4>Shop Order</h4>
    </div>
  </div>

  <form action="/search-shop-order" method="POST" id="sor">
    <div class="form-group row">
      <div class="col-sm-1 col-lg-1">
        <label for="sor1">Shop</label>
      </div>
      <div class="col-sm-4 col-lg-3">
        <select class="form-control" name="shop" id="sor1">
          <option selected>All</option>
        </select>
      </div>
      <div class="col-sm-1 col-lg-1">
        <label for="sor2">Status</label>
      </div>
      <div class="col-sm-4 col-lg-3">
        <select class="form-control" name="status" id="sor2">
          <option selected>All</option>
          <option>Not finished</option>
          <option>Finished</option>
          <option>Cancelled</option>
        </select>
      </div>
      <div class="col-sm-2 col-lg-4">
        <button type="submit" class="btn btn-primary" id="sor3">
          <span class="spinner-border spinner-border-sm"></span>
          Search
        </button>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <button type="button" class="btn btn-success" id="sor4">
          <span class="spinner-border spinner-border-sm"></span>
          Finish selected orders
        </button>
        <button type="button" class="btn btn-danger" id="sor5">
          <span class="spinner-border spinner-border-sm"></span>
          Cancel selected orders
        </button>
      </div>
    </div>
  </form>

  <table class="table table-striped" id="table4">
    <thead class="thead-dark">
      <tr>
        <th></th>
        <th>OID</th>
        <th>Status</th>
        <th>Start</th>
        <th>End</th>
        <th>Shop</th>
        <th>Total Price</th>
        <th></th>
      </tr>
    </thead>
  </table>
</div>
