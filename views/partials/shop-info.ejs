<!-- content for shop manager -->

<div class="row" id="shop-info">
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12"><h4>My Shop</h4></div>
    </div>

    <form action="" method="POST" id="mys">
      <div class="form-group row">
        <div class="col-sm-3 col-lg-2 info"><p>Shop</p></div>
        <div class="col-sm-3 col-lg-2 info">
          <p><span><%= shop.shop_name %></span></p>
        </div>
        <div class="w-100"></div>
        <div class="col-sm-3 col-lg-2 info"><p>City</p></div>
        <div class="col-sm-3 col-lg-2 info">
          <p><span><%= shop.shop_city %></span></p>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3 col-lg-2">
          <label for="mys1">Price</label>
        </div>
        <div class="col-sm-9 col-lg-6">
          <div class="input-group">
            <input
              type="number"
              class="form-control"
              value="<%= shop.mask_price %>"
              id="mys1"
              disabled
            />
            <div class="input-group-append">
              <button type="button" class="btn btn-primary" id="mys2">
                <span class="spinner-border spinner-border-sm"></span>
                Edit
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3 col-lg-2">
          <label for="mys3">Amount</label>
        </div>
        <div class="col-sm-9 col-lg-6">
          <div class="input-group">
            <input
              type="number"
              class="form-control"
              value="<%= shop.mask_amount %>"
              id="mys3"
              disabled
            />
            <div class="input-group-append">
              <button type="button" class="btn btn-primary" id="mys4">
                <span class="spinner-border spinner-border-sm"></span>
                Edit
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3 col-lg-2">
          <label for="mys5">Employee</label>
        </div>
        <div class="col-sm-9 col-lg-6">
          <div class="input-group">
            <input
              type="text"
              class="form-control"
              placeholder="Type Account"
              id="mys5"
            />
            <div class="input-group-append">
              <button type="button" class="btn btn-primary" id="mys6">
                <span class="spinner-border spinner-border-sm"></span>
                Add
              </button>
            </div>
          </div>
        </div>
        <div class="col">
          <label for="mys5"
            ><span class="text-danger" id="mys-err5"></span
          ></label>
        </div>
      </div>
    </form>
  </div>

  <div class="col-sm-6">
    <table class="table table-striped" id="table2">
      <thead class="thead-dark">
        <tr>
          <th>Account</th>
          <th>Phone</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% clerks.forEach(function (c) { %>
        <tr>
          <td><%= c.account %></td>
          <td><%= c.phone %></td>
          <td>
            <button type="button" class="btn btn-danger">
              <span class="spinner-border spinner-border-sm"></span>
              Delete
            </button>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
